      "before:init": "yarn lint && yarn build && npm test"
    },
    "npm": {
      "publish": false
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "i18n-codegen",
  "author": "Lucas Munhoz",
  "devDependencies": {
    "@release-it/conventional-changelog": "^1.1.0",
    "@types/app-root-path": "^1.2.4",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^25.1.4",
    "@types/sade": "^1.6.0",
    "husky": "^4.2.3",
    "release-it": "^13.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.1",
    "tsdx": "^0.13.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
