{
  "version": "0.0.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "url": "https://github.com/lnmunhoz/i18n-codegen"
  },
  "bin": {
    "i18n-codegen": "./dist/index.js"
  },
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "test": "jest",
    "lint": "tsdx lint",
    "prebuild": "rimraf dist",
    "i18n": "i18n-codegen generate",
    "release": "release-it"
  },
  "peerDependencies": {},
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
